<link rel="stylesheet" href="css/cart.css">
<div class="cart__content_ bounce rounded bg-white shadow p-3 position-absolute end-0" style="width: min(400px, 85vw); z-index: 50; top: 10px">
   <h1 class="font-weight-bold mb-4" style="font-size: 20px;"><u>Votre panier :</u></h1>
   <div class="items">
      <% items.forEach(i => { %>
         <div role="button" class="item p-2 rounded d-flex justify-content-between align-items-center mb-2" style="height: 50px;" data-item-id="<%= i.item_id %>">
            <img class="h-100 rounded" style="aspect-ratio: 1/1; object-fit: cover;" src="<%= i.image %>" alt="<%= i.name %>">
            <div style="width: 60%; font-size: 16px;"><%= i.name %></div>
            <div class="font-weight-bold d-flex justify-content-between" style="width: 19%;">
               <span><%= i.price %> €</span>
               <small class="font-weight-light">x<%= i.quant %></small>
            </div>
         </div>
      <% }) %>
   </div>
   <div class="ml-auto">Total: <u class="font-weight-bold"><%= total %>€</u></div>
   <button type="button" class="submit__command rounded shadow-sm p-2 m-auto d-flex justify-content-center align-items-center bg-danger text-white font-weight-bold">
      Commander !
   </button>
</div>
