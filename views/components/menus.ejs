<div class="appear-ltr row g-3">
   <% menus.forEach(menu => {%>
      <div class="col-sm-12 col-md-4 col-lg-3">
         <div role="button" class="menu__item shadow-sm h-100 d-flex flex-column justify-content-between bg-white">
            <img class="w-100" src="<%= menu.image %>" alt="<%= menu.menu_name %>">
            <div class="p-2" style="max-height: 30%;">
               <p class="fw-normal"><%= menu.menu_name %></p>
               <p style="font-size: 13px;" class="fw-light text-truncate"><%= menu.description %></p>
            </div> 
            <form id="addMenu__<%= menu.id %>" class="addMenu py-2 px-3 w-100 align-self-end d-flex align-items-center justify-content-between">
               <p class="fw-normal my-auto" data-price="<%= menu.price %>"><%= menu.displayedPrice %></p>
               <button role="button" class="bg-primary text-white p-2">Ajouter</button>
               <input type="hidden" name="menu__id" value="<%= menu.id %>">
               <input type="hidden" name="name" value="<%= menu.menu_name %>">
               <input type="hidden" name="image" value="<%= menu.image %>">
               <input type="hidden" name="price" value="<%= menu.price %>">
               <input type="hidden" name="displayedPrice" value="<%= menu.displayedPrice %>">
               <input type="hidden" name="type" value="menu">
            </form>
         </div>  
      </div>
   <% }) %>
   <style>
      .menu__item {
         transition: all 0.2s ease-in-out;
      }
      .menu__item:hover {
         box-shadow: 0 .125rem .25rem rgba(0,0,0,.2)!important;
         transform: scale(1.01);
      }
   </style>
   <script>
      $('.addMenu').on('submit', function(e) {
         e.preventDefault();
         const data = $(this).serializeArray();
         const itemToAdd = new Item(...data.map(e => e.value));
         const { cart } = window;
         cart.addToCart(itemToAdd);
      });
   </script>
</div>