<link rel="stylesheet" href="css/cart.css">
<div class="cart__content_ bounce rounded bg-white shadow p-3" style="position: absolute; width: 30vw; z-index: 50; cursor: default; top: 10px; right: -20px;">
   <h1 class="font-weight-bold mb-4" style="font-size: 20px;"><u>Votre panier :</u></h1>
   <div class="items">
      <% items.forEach(i => { %>
         <div class="item p-2 rounded d-flex justify-content-between align-items-center mb-2" style="height: 50px;" data-item-id="<%= i.item_id %>">
            <img class="h-100 rounded" style="aspect-ratio: 1/1; object-fit: cover;" src="<%= i.image %>" alt="<%= i.name %>">
            <div style="width: 60%; font-size: 16px;"><%= i.name %></div>
            <div class="font-weight-bold d-flex justify-content-between" style="width: 20%;">
               <span><%= i.price %> €</span>
               <i class="font-weight-light" style="font-size: 14px;">x<%= i.quant %></i>
            </div>
         </div>
      <% }) %>
   </div>
   <div class="ml-auto" style="width: max-content;">Total: <u class="font-weight-bold"><%= total %>€</u></div>
   <button style="margin: auto;" class="submit__command rounded shadow-sm p-2 d-flex justify-content-center align-items-center bg-danger text-white font-weight-bold">
      Commander !
   </button>
</div>
